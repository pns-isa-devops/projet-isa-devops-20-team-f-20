<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://www.jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="tomee" default="true">
        <configuration>
<!--            <property name="httpPort">-1</property>-->
<!--            <property name="stopPort">-1</property>-->
<!--            <property name="openejbVersion">${tomee.version}</property>-->
<!--            <property name="dir">target/apache-tomee-remote</property>-->
<!--            <property name="appWorkingDir">target/arquillian-test-working-dir</property>-->
            <property name="properties">
                my-datasource = new://Resource?type=DataSource
                my-datasource.JdbcUrl = jdbc:hsqldb:mem:TCFDB;shutdown=true
                my-datasource.UserName = sa
                my-datasource.Password =s
                my-datasource.JtaManaged = true
                my-datasource.LogSql = false
            </property>
        </configuration>
    </container>

    <extension qualifier="cucumber">
        <property name="report">true</property>
        <property name="generateDocs">true</property>
        <property name="report-directory">target/cucumber-report</property>
        <property name="persistenceEventsActivated">true</property>
    </extension>

</arquillian>
